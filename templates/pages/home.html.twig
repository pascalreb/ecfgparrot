{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div>
        <div style="background-image: url('./uploads/atelier.jpg'); background-size: cover; height: 20vh;">
    </div>

    <section class="container-sm d-flex flex-column">
        <h2 class="mt-4 pt-4 text-center" style="text-transform: uppercase; color: #446E9B;">
            <i class="fa-solid fa-gear m-3"></i>Réparation carrosserie</h2>
        <div class="carrosserie row">
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Réparation plastique</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Réparation optique</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Vitrage</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Réparation carrosserie rapide</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-4">
            <a href=""><button type="button" class="btn btn-primary">En savoir plus</button></a>
        </div>
    </section>
    
    <div class="divider">
        <i class="fa-solid fa-circle"></i>
    </div>

    <section class="container-sm d-flex flex-column">
        <h2 class="text-center" style="text-transform: uppercase; color: #446E9B;">
            <i class="fa-solid fa-wrench m-3"></i> Entretien du véhicule</h2>
        <div class="entretien row d-flex flex-wrap justify-content-between">
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Révision vidange</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Climatisation</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Embrayage</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Courroie de distribution</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Amortisseurs</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Disques et plaquettes</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Diagnostic électronique</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title ex">Géométrie et parallélisme</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-2">
            <a href=""><button type="button" class="btn btn-primary">En savoir plus</button></a>
        </div>
    </section>

    <div class="divider">
        <i class="fa-solid fa-circle"></i>
    </div>

    <section class="temoignages container-sm p-4">
        <h2 class="text-center" style="text-transform: uppercase; color: #446E9B;">Témoignages</h2>
        <div class="d-flex flex-wrap">
            {% for opinion in opinions %}
                <div class="card m-1" style="width: 100%;">
                    <div class="card-body">
                        <h3 class="card-title"></h3>
                        <p class="card-name"><b>{{ opinion.name }}</b></p>
                        <p class="card-message">{{ opinion.message }}</p>
                        <p class="card-mark" style="color: #446E9B">
                            {% for i in 1..5 %}
                                {% if i <= opinion.mark %}
                                    <i class="fa-solid fa-star"></i>
                                {% else %}
                                    <i class="fa-regular fa-star"></i>
                                {% endif %}
                            {% endfor %}
                            <span class="fw-bold ps-3">
                                {{ opinion.mark }}/5
                            </span>
                            <span>
                                - {{ opinion.createdAt|date("m/d/Y") }}
                            </span>
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(opinions) }}
        </div>
        <div class="d-flex justify-content-end">
            <a href="{{ path('app_publicOpinion') }}"><button type="button" class="btn btn-primary">Donnez votre avis</button></a>
        </div>
    </section>

    <div class="divider">
        <i class="fa-solid fa-circle"></i>
    </div>

    <section class="container-sm mb-4">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2889.173386559506!2d1.4409235765286363!3d43.602931355680084!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12aebb6277e23d01%3A0xcf9464500ddb85b2!2sRue%20Saint-Rome%2C%2031000%20Toulouse!5e0!3m2!1sfr!2sfr!4v1710841787899!5m2!1sfr!2sfr"
        width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        <div class="d-flex justify-content-end">
            <a href="{{ path('app_contact') }}"><button type="button" class="btn btn-primary mt-4">Contactez-nous</button></a>
        </div>
    </section>
    <div>
        <a href="#" class="scroll-to-top" aria-label="Remonter en haut de la page">
            <i class="fa-solid fa-chevron-up"></i>
        </a>
    </div>

{% endblock %}