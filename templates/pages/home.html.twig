{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <h1 class="m-5 text-center">Garage Vincent PARROT</h1>

    <section class="container-sm d-flex flex-column">
            <h2 class="m-4 text-center">Réparation carrosserie</h2>
            <div class="m-4 mx-auto">
                <i class="fa-solid fa-gear m-3"></i> Réparation plastique<br>
                <i class="fa-solid fa-gear m-3"></i> Réparation optique<br>
                <i class="fa-solid fa-gear m-3"></i> Vitrage<br>
                <i class="fa-solid fa-gear m-3"></i> Réparation carrosserie rapide<br>
            </div>
    </section>
        
    <section class="container-sm d-flex flex-column">
            <h2 class="m-4 text-center">Entretien du véhicule</h2>
            <div class="m-4 mx-auto">
                <i class="fa-solid fa-wrench m-3"></i> Révision vidange<br>
                <i class="fa-solid fa-wrench m-3"></i> Climatisation<br>
                <i class="fa-solid fa-wrench m-3"></i> Embrayage<br>
                <i class="fa-solid fa-wrench m-3"></i> Courroie de distribution<br>
                <i class="fa-solid fa-wrench m-3"></i> Amortisseurs<br>
                <i class="fa-solid fa-wrench m-3"></i> Disques et plaquettes<br>
                <i class="fa-solid fa-wrench m-3"></i> Diagnostic électronique<br>
                <i class="fa-solid fa-wrench m-3"></i> Géométrie et parallélisme<br>
            </div>
    </section>

    <section class="container-sm">

            <h2 class="m-4 text-center">Témoignages</h2>

            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="{{ asset('uploads/atelier.jpg') }}" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="{{ asset('uploads/mecanique.jpg') }}" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="{{ asset('uploads/douilles.jpg') }}" class="d-block w-100" alt="...">
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>

