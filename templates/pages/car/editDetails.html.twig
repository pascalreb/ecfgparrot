{% extends 'base.html.twig' %}

{% block title %}Détails véhicule{% endblock %}

{% block body %}
    <div class="container mt-4">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="mb-4">Véhicule n° {{ car.id }}</div>
        {# <img src="{{ asset('./uploads/images/cars/' ~ image.name)}}" alt="images véhicule" width="300vw;"> #}
        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="30%" 
        height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" 
        preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
        </svg>
        
        <h4 class="mt-4 mb-4">Marque : {{ car.brand }}</h4>
        <p class="mb-4">Modèle : {{ car.model }}</p>
        <p class="mb-4">Année : {{ car.year }}</p>
        <p class="mb-4">Energie : {{ car.energy }}</p>
        <p class="mb-4">Kilométrage : {{ car.kilometers }} km</p>
        <p class="mb-4 fs-4 fw-bold">Prix : {{ car.price }} €</p>
        <a href="{{ path('app_contactOccasions', { id: car.id }) }}"><button type="button" class="btn btn-primary mb-4" >Contacter le garage</button></a>
    </div>
{% endblock %}
