<div class="card border-light m-3" style="width: 24rem;">
    <div class="card-header">Véhicule n° {{ car.id }}</div>
    {# <img src="{{ asset('./uploads/images/cars/' ~ image.name)}}" alt="images véhicule" width="300vw;"> #}
    <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" 
    height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" 
    preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
        <rect width="100%" height="100%" fill="#868e96"></rect>
        <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
    </svg>
    
    <div class="card-body">
        <h4 class="card-title">Marque : {{ car.brand }}</h4>
        <p class="card-text">Modèle : {{ car.model }}</p>
        <p class="card-text">Année : {{ car.year }}</p>
        <p class="card-text">Energie : {{ car.energy }}</p>
        <p class="card-text">Kilométrage : {{ car.kilometers | number_format(0, ',', ' ') }} km</p>
        <p class="card-text fw-bold fs-4 text-primary">Prix : {{ car.price | number_format(0, ',', ' ') }} €</p>
        <a href="{{ path('app_editDetailsOccasions', { id: car.id }) }}"><button type="button" class="btn btn-primary" style="width: 100%;">Détails</button></a>
    </div>
</div>